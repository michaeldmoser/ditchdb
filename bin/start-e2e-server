#!/bin/bash

RUN_TYPE=${1:-run}

BIN_DIR=$(dirname `readlink -f "${BASH_SOURCE:-$0}"`)
PROJECT_DIR="$(dirname $BIN_DIR)"
TEST_DIR="${PROJECT_DIR}/testing/e2e"
DJANGO_ENV=${TEST_DIR}/.env

trap cleanup EXIT
cleanup() {
  echo 'Shutting down e2e test servers'
  kill $DEV_PID
  wait $DEV_PID
}

source $TEST_DIR/.env
echo $DATABASE_URL
psql $DATABASE_URL << EOF
    DROP SCHEMA public CASCADE;
    CREATE SCHEMA public;
EOF

cd  $PROJECT_DIR/backend
DJANGO_ENV=$DJANGO_ENV python ./manage.py migrate

DJANGO_ENV=$DJANGO_ENV VITE_DEV_PORT=$VITE_DEV_PORT DJANGO_PORT=$DJANGO_PORT $BIN_DIR/start-dev-server &
DEV_PID=$!

while ! curl --silent -I http://localhost:5174; do
  sleep 1
  echo wating for django server to start
done

wait $DEV_PID # wait for dev server to exit
